<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" type="text/css" 
            href="{{ asset('bundles/followme/node_modules/bootstrap/dist/css/bootstrap.css') }}" />
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
    </head>
    <body>


    <nav class=" navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('main') }}">Follow Me</a>
          </div>
            <ul class="nav navbar-nav navbar-right">
            {% if app.session.get('id') %}
              <li><a href="{{ path('signout') }}">{{ "sign.out"|trans|capitalize }}</a></li> 
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Activit√©s
                    <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a href="{{ path('dating') }}">Dating</a></li>
                      <li><a href="{{ path('add') }}">Add</a></li>
                    </ul>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    </li>
            {% else %}
              <li><a href="{{ path('signin') }}">{{ "sign.in"|trans|capitalize }}</a></li> 
              <li><a href="{{ path('signup') }}">{{ "sign.up"|trans|capitalize }}</a></li>
              <li><a href="{{ path('admin') }}">Admin</a></li> 
            {% endif %}
            </ul>
           </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

        <main class="col-xs-12">
        {% block body %}{% endblock %}
        </main>
        {% block javascripts %}{% endblock %}

        <script type="text/javascript" 
            src="{{ asset('bundles/followme/node_modules/jquery/dist/jquery.js') }}"></script>
	    <script type="text/javascript" 
            src="{{ asset('bundles/followme/node_modules/bootstrap/dist/js/bootstrap.js') }}"></script>
    </body>
</html>
