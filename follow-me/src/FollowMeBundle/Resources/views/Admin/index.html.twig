{% extends "@FollowMeBundle/Resources/views/base.html.twig"  %}

{% block title %}Gestionnaire des utilisateurs{% endblock %}

{% block body %}
<h1 style="text-align:center">Gestionnaire des utilisateurs</h1>
<hr />

{% if id %}
<div class="alert alert-success container-fluid col-xs-4 col-xs-offset-4">
     <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;
     </a>

Vous avez supprim√© l'utilisateur {{ id}}
</div>
{% endif %}

<div class="row">

{% for user in users %}
<div class="col-xs-12">
    <h2 class="col-xs-8" style="text-align:center">
      {{ user.getUserId() }}
      <small>{{ user.getUserMail() }}
      <hr />
    </h2>
    <div class="col-xs-1">
    <a class="btn btn-warning glyphicon glyphicon-ban-circle"></a>
    </div>

{% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="col-xs-1">
    <a class="btn btn-danger glyphicon glyphicon-remove" 
    href="{{ path('admin_user', {'id': user.getUserId() }) }}"></a>
    </div>

{% endif %}
</div>
{% endfor %}

</div>
{% set results = users %}

{% include "@FollowMeBundle/Resources/views/ui/pages.html.twig" %}

{% endblock %}
